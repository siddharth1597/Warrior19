<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Dashboard"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/india"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight=".5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COVID Dashboard"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Government of India"
        android:layout_marginTop="-5dp"
        android:textSize="15dp"
        />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Citizen Dashboard"
        android:textSize="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_weight=".8"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/people"
            android:paddingTop="20dp"
            android:layout_weight=".2"/>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="maps"
        android:background="@drawable/cursor_color"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/cursor_color_new">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hospitals on Maps"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:background="@android:color/white"
                android:textColor="@android:color/white" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hospital_text"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="14dp"/>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="list_hospital"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/cursor_color_list">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List of hospitals"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:background="@android:color/white"
                android:textColor="@android:color/white" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hospital_list"
                android:textColor="@android:color/white"
                android:textStyle="italic"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="14dp"/>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/safe" />

</LinearLayout>